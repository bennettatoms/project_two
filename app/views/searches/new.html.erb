<section class="container">
  <div class="row search-analyze">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
        <%= form_tag(searches_path, method: "get") do %>
        <%= label_tag(:query, "Search for:") %>
        <%= text_field_tag(:query, params[:term], placeholder: "e.g. Sally Jesse Raphael", size:80, autofocus: true) %>
        <%= submit_tag("Search") %>
      <% end %>
    </div>
  </div>
  <br>
  <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 about-search-blurb">
    <h2>Search by:</h2>
    <h4><strong>Hashtag</strong> ~ #bacon</h4>
    <h4><strong>User</strong> ~ @KevinBacon</h4> 
    <h4><strong>Subject</strong> ~ "delicious food and/or the meaning of life"</h4><br>
    <h5>(Pro tip: Use quotes around the search term for a more accurate sentiment rating.)</h5>
    <br>
    <h3>Go forth, and search responsibly!</h3>
  </div>
</section>
